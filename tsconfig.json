{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "noResolve": false,
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "compileOnSave": false,
  "exclude": [
    "dist",
    "node_modules",
    "libs",
    ".idea",
    "etc",
    "legacy",
    "lib"
  ],
  "filesGlob": [
    "typings/**/*.d.ts",
    "src/**/*.ts"
  ]
}
