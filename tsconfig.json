{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "noResolve": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "strictNullChecks": true
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".idea",
    "lib"
  ]
}
